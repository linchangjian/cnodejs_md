<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="Base.Theme.MaterialDesign" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673A66</item>
        <item name="colorPrimaryDark">#512D66</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <!-- AppWidget -->
    <style name="AppWidget" parent="Theme.AppCompat.Light" />
    <!-- Deep Line -->
    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
